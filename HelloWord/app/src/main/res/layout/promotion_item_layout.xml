<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:orientation="horizontal">

   <ImageView
       android:id="@+id/img_promotion_fm"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@mipmap/img_user"
       android:scaleType="fitXY"
       android:layout_marginVertical="3dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_promotion_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sadsdasdasd"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"/>
         <TextView
             android:id="@+id/tv_promotion_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="20dp"
             android:text="cdsdvdbdsvsd"
             android:textStyle="bold"
             android:textColor="#FF9800"

             />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_right_promotion"
        android:tint="#fff"/>
</LinearLayout>