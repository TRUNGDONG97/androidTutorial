<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F0B7">

    <LinearLayout
        android:id="@+id/ll_untilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào ,"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Nguyễn Văn A"
                android:textColor="#FC0101"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (0329563942)"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/untilities_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:text="Điểm tích lũy"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/img_us_dolla"
                    android:text="3000"
                    android:textColor="#F00A0A"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_us_dolla"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_dollar"
                    android:tint="#CDDC39" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#000" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:stretchColumns="*">

                <TableRow>

                    <ImageView
                        android:layout_gravity="left"
                        android:src="@drawable/ic_earn_points" />

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_use_point" />

                    <ImageView
                        android:layout_gravity="right"
                        android:src="@drawable/ic_untilities" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="left"
                        android:text="Tích điểm"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Dùng điểm"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="right"
                        android:text="Tiện ích"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:layout_gravity="left"
                        android:src="@drawable/ic_questions" />

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cart" />

                    <ImageView
                        android:layout_gravity="right"
                        android:src="@drawable/ic_label" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="left"
                        android:text="Hỏi đáp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Đặt hàng"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="right"
                        android:text="Báo giá"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_menu"
        android:layout_below="@+id/ll_untilities"
        android:layout_marginHorizontal="40dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin tức"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/img_valve">

                <TextView
                    android:id="@+id/tv_notification_news"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Khuyến mãi lên đến 50%"
                    android:textColor="#FAF9F9"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_notification_news"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/untilities_bg"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Chi tiết"
                        android:textColor="#030303"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#F80404" />

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khuyến mãi"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/img_water_pipe">

                <TextView
                    android:id="@+id/tv_notification_promotion"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Khuyến mãi lên đến 50%"
                    android:textColor="#FAF9F9"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_notification_promotion"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/untilities_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Chi tiết"
                        android:textColor="#030303"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#F80404" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_menu" />
</RelativeLayout>